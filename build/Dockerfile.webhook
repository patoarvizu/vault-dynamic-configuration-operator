FROM golang:1.12 as builder

COPY . /go/src/github.com/patoarvizu/vault-dynamic-configuration-operator/

WORKDIR /go/src/github.com/patoarvizu/vault-dynamic-configuration-operator/

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /vault-dynamic-configuration-webhook /go/src/github.com/patoarvizu/vault-dynamic-configuration-operator/cmd/webhook/webhook.go

FROM alpine:3.9

RUN apk update && apk add ca-certificates

COPY --from=builder /vault-dynamic-configuration-webhook /

CMD /vault-dynamic-configuration-webhook